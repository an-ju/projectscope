<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="text-success">Iteration Generating</h1>
  <ul class="nav nav-tabs nav-justified">
    <li role="presentation"><a href="/iterations">STEP 1:Select Template</a></li>
    <li role="presentation"><a href="/iterations">STEP 2:Select Projects</a></li>
    <li role="presentation" class="active"><a href="/iterations">STEP 3:Info Update</a></li>
  </ul>
  <h3 class="text-info">Info Update</h3>
</div>
<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Start Time</th>
    <th>End Time</th>
  </tr>
  </thead>
  <tbody>

  </tbody>
  <%= form_tag(iterations_apply_to_all_path, method: "post") do %>
      <tr>
        <td><%= text_field_tag(:start_time, hint = "yyyy/mm/dd") %></td>
        <td><%= text_field_tag(:end_time, hint = "yyyy/mm/dd") %></td>
        <%= hidden_field_tag :iteration_id, @iteration.id %>
        <%= hidden_field_tag :projects, @projects.collect{|proj| proj.id} %>
        <td><%= submit_tag "apply to all" , class: "btn btn-sm btn-outline-secondary dropdown-toggle", role: "button"%></td>
      </tr>
  <% end %>
</table>
<h4 class="text-success">Template Selected</h4>
<span class="badge"><%=@iteration.name%></span>
<h4 class="text-success">Projects Selected</h4>
<% @projects.each do |project| %>
    <span class="badge"><%=project.name%></span>
<%end%>
