<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="text-success">Iteration Generating</h1>
  <ul class="nav nav-tabs nav-justified">
    <li role="presentation"><a href="/iterations">STEP 1:Select Template</a></li>
    <li role="presentation" class="active"><a href="/iterations">STEP 2:Select Projects</a></li>
    <li role="presentation"><a href="/iterations">STEP 3:Info Update</a></li>
  </ul>
  <h3 class="text-info">Select Projects</h3>
</div>
<div class="table-responsive">
    <%= form_tag(iter_confirm_info_path(id:@iteration.id ), method: "post") do %>
      <table class="table table-striped table-sm">
        <thead>
        <tr>
          <th>   </th>
          <th>Project</th>
          <th>iterations assigned</th>
        </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= check_box_tag('project_ids[]',project.id, true, class: "checkbox") %></td>
              <td><%=project.name%></td>
              <td>3</td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= hidden_field_tag :iteration_id, @iteration.id %>
      <%= submit_tag "Go Next" , class: "card-link btn btn-sm", role: "button"%>
    <%end%>
</div>