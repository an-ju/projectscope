<!DOCTYPE html>
<html>
<head>
  <title>Teamscope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_pack_tag 'application' %>
  <%= javascript_pack_tag 'application' %>
  <%= csrf_meta_tags %>

  <link href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css" rel="stylesheet">
</head>
<body data-spy="scroll" data-target="#navbar">
	<div class="col-md-12 header-bar">
    <% if defined? @sub_metrics %>
  		<div class="col-md-9">
        <h4>
          <%= "Project #{@project.id}" %>
        </h4>
      </div>
    <% else %>
      <div class="col-md-9">
        <h4><%= link_to 'Welcome to Teamscope', projects_path, style: 'color:white' %></h4>
      </div>
    <% end %>
		<div class="col-md-3" style="text-align: right;">
			<% if user_signed_in? %>
				<%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "btn btn-md btn-default") %>
			<% end %>
		</div>
	</div>
	<div class="col-md-12" style="padding-top: 60px;" data-behavior="vue">
		<br>

		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<% unless notice.nil? %>
			      <div class="alert alert-info"><%= notice %></div>
			    <% end%>
			    <% unless alert.nil? %>
			      <div class="alert alert-danger"><%= alert %></div>
			    <% end %>
			</div>
			<div class="col-md-3"></div>
	    </div>

		<%= yield %>
	</div>
</body>
</html>
