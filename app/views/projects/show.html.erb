<div class="col-md-6" %>
  <h1><%= @project.name %></h1>
</div>
<div class="col-md-6">
  <%= link_to 'Config', edit_project_path(@project), class: 'btn btn-default' %>
</div>

<%- if @project.current_iteration %>
  <p><%= "You are at #{@project.current_iteration.name}" %></p>
  <%- @project.current_iteration.final_project_issues.each do |issue| %>
    <%= issue.content %>
  <% end %>
<% end %>
